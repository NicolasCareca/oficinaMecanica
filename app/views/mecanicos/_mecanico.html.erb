
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Especialidade</th>
      <th>Equipe</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @mecanicos.each do |mecanico| %>
      <tr>
        <td><%= mecanico.nome %></td>
        <td><%= mecanico.especialidade %></td>
        <td><%= mecanico.equipe.nome %></td>
        <td>
          <%= link_to "Exibir", mecanico, class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

