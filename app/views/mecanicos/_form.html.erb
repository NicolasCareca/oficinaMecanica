<div class="container mt-4">
  <div class=" col-8 mx-auto">
    <%= link_to "Voltar", mecanicos_path, class: "btn btn-danger mb-3" %>
  <div class="card ">
  
    <div class="card-body">
      <%= form_with(model: mecanico, class: "form") do |form| %>
        <!-- Se houver erros, exiba uma mensagem -->
        <% if mecanico.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(mecanico.errors.count, "error") %> prohibited this veiculo from being saved:</h2>
            <ul>
              <% mecanico.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Campos do formulÃ¡rio -->
        <div class="form-group">
          <%= form.label :nome %>
          <%= form.text_field :nome, class: "form-control" %>
        </div>
<div class="form-group">
          <%= form.label :especialidade %>
          <%= form.text_field :especialidade, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :telefone %>
          <%= form.text_field :telefone, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
           <%= form.label :equipe_id, class: "form-label" %>
          <%= form.collection_select(:equipe_id, Equipe.all, :id, :nome, { prompt: 'Selecione a equipe' }, { class: 'form-select' }) %>
        </div>

         <div class="form-group mt-3 text-center"> 
          <%= form.submit "Adicionar" , class: "btn btn-primary col-sm-12", style: "height: 8vh;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
        