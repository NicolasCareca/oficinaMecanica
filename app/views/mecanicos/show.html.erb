<div class="container">
  <div class="text-center">
    <p class="text-success"><%= notice %></p>

    <%= render @mecanico %>

    <div class="mt-3">
      <%= link_to "editar", edit_mecanico_path(@mecanico), class: "btn btn-primary" %> |
      <%= link_to "voltar ", mecanicos_path, class: "btn btn-secondary" %>

      <%= button_to "deletar", @mecanico, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger mt-3" %>
    </div>
  </div>
</div>
