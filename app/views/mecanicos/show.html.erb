<div class="container">
  <div class="text-center">
    <p class="text-success"><%= notice %></p>

    <%= render @mecanico %>

    <div>
      <%= link_to "Edit this mecanico", edit_mecanico_path(@mecanico), class: "btn btn-primary" %> |
      <%= link_to "Back to mecanicos", mecanicos_path, class: "btn btn-secondary" %>

      <%= button_to "Destroy this mecanico", @mecanico, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
