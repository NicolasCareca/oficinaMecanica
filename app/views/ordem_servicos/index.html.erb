<div class="container mt-4">
  <h1 class="mb-4">Ordens de Serviço</h1>
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Veículo</th>
        <th>Problema</th>
        <th>Equipe</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @ordem_servicos.each do |ordem_servico| %>
        <tr>
          <td><%= ordem_servico.veiculo.placa %></td>
          <td><%= ordem_servico.problema_veiculo %></td>
       
          <td><%= ordem_servico.equipe.nome %></td>
        
          <td>
            <%= link_to 'Ver', ordem_servico, class: 'btn btn-info btn-sm me-1' %>
            <%= link_to 'Editar', edit_ordem_servico_path(ordem_servico), class: 'btn btn-warning btn-sm me-1' %>
          <%= link_to 'Concluir', ordem_servico, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm', remote: true %>


          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Nova Ordem de Serviço', new_ordem_servico_path, class: 'btn btn-primary' %>
</div>
