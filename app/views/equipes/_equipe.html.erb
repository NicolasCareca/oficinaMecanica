<div class="container mt-5">
  <div class="table-responsive">
    <table class="table table-bordered mx-auto col-6">
      <thead class="thead-dark">
        <tr>
          <th colspan="2" class="text-center">Detalhes da Equipe</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="font-weight-bold">Nome:</td>
          <td><%= equipe.nome %></td>
        </tr>

        <tr>
          <td class="font-weight-bold">Mecânicos:</td>
          <td>
            <% equipe.mecanicos.each do |mecanico| %>
              <p><%= mecanico.nome %></p>
            <% end %>
          </td>
        </tr>

        <tr>
          <td class="font-weight-bold">Descrição:</td>
          <td><%= equipe.descricao %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
