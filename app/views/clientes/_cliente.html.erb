<!-- /*_cliente.html.erb*/ -->
<p style="color: green; text-align: center;"><%= notice %></p>

<div id="clientes" class="container mt-4">

 
  <div class="table-responsive">
    <table class="table table-bordered table-striped mx-auto col-8">
      <thead class="thead-dark">
        <tr>
          <th>Nome</th>
          <th>Telefone</th>
          <th>CPF</th>
          <th>RG</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @clientes.each do |cliente| %>
          <tr>
            <td><%= cliente.nome %></td>
            <td><%= cliente.telefone %></td>
            <td><%= cliente.cpf %></td>
            <td><%= cliente.rg %></td>
            <td class="text-center">
              <%= link_to "Exibir", cliente, class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

