<div class="container mt-4 text-center">
  <%= render @cliente %>

  <div class="mt-3">
    <%= link_to "Editar", edit_cliente_path(@cliente), class: "btn btn-primary" %> |
    <%= link_to "Voltar", clientes_path, class: "btn btn-secondary" %>

    <%= button_to "Deletar", @cliente, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger" %>
  </div>
</div>
