
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">

      

      <%= render @peca %>

      <div class="text-center mt-3">
        <%= link_to "Editar", edit_peca_path(@peca), class: "btn btn-primary mr-2" %>
        <%= link_to "Voltar", pecas_path, class: "btn btn-secondary mr-2" %>
        <%= button_to "Excluir", @peca, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mt-3" %>
      </div>

    </div>
  </div>
</div>
