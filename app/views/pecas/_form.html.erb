<div class="container mt-4">
  <div class=" col-8 mx-auto">
    <%= link_to "Voltar", pecas_path, class: "btn btn-danger mb-3" %>
  <div class="card ">
  
    <div class="card-body">
      <%= form_with(model: peca, class: "form") do |form| %>
        <!-- Se houver erros, exiba uma mensagem -->
        <% if peca.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(peca.errors.count, "error") %> prohibited this peca from being saved:</h2>
            <ul>
              <% peca.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Campos do formulÃ¡rio -->
        <div class="form-group">
          <%= form.label :nome %>
          <%= form.text_field :nome, class: "form-control", required: true %>
        </div>
<div class="form-group">
          <%= form.label :descricao %>
          <%= form.text_field :descricao, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :quantidade %>
          <%= form.number_field :quantidade, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :preco %>
          <%= form.number_field :preco, class: "form-control", required: true %>
        </div>

  
         <div class="form-group mt-3 text-center"> 
          <%= form.submit "Salvar" , class: "btn btn-primary col-sm-12", style: "height: 8vh;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>