<div id="<%= dom_id peca %>" class="container mt-4">
  <div class="table-responsive">
    <table class="table table-bordered mx-auto col-6">
      <thead class="thead-dark">
        <tr>
          <th colspan="2" class="text-center">Detalhes da Peça</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="font-weight-bold">Nome:</td>
          <td><%= peca.nome %></td>
        </tr>

        <tr>
          <td class="font-weight-bold">Quantidade:</td>
          <td><%= peca.quantidade %></td>
        </tr>

        <tr>
          <td class="font-weight-bold">Preço por peça:</td>
          <td><%= peca.preco %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
