<p style="color: green"><%= notice %></p>

<h1>Servicos</h1>

<div id="servicos">
  <% @servicos.each do |servico| %>
    <div>
      <p>Nome: <%= servico.nome %></p>
      <p>Valor: <%= servico.valor %></p>
    </div>
    <p>
      <%= link_to "Show this servico", servico %>
    </p>
  <% end %>
</div>

<%= link_to "New servico", new_servico_path %>
