<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-8">
    
  <div>
    <%= link_to "Voltar", servicos_path, class: "btn btn-danger mb-3" %>
  </div>
      <div class="card">
        <div class="card-body">

          <%= form_with(model: servico, class: "mt-3") do |form| %>
            <% if servico.errors.any? %>
              <div class="alert alert-danger">
                <h2><%= pluralize(servico.errors.count, "error") %> prohibited this servico from being saved:</h2>

                <ul>
                  <% servico.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :nome, class: "form-label" %>
              <%= form.text_field :nome, class: "form-control", required: true %>
            </div>
               <div class="mb-3">
              <%= form.label :descricao, class: "form-label" %>
              <%= form.text_field :descricao, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :valor, class: "form-label" %>
              <%= form.text_field :valor, class: "form-control", required: true %>
            </div>

           <div class="form-group mt-3 text-center"> 
              <%= form.submit "Salvar", class: "btn btn-primary col-sm-12", style: "height: 8vh;" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
