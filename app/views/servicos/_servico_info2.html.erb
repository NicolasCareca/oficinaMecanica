<div class="card-body">
  <div class="row">
    <div class="col-md-6">
      <strong>Nome:</strong>
      <p><%= servico.nome %></p>
    </div>
    <div class="col-md-6">
      <strong>Descrição:</strong>
      <p><%= servico.descricao %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <strong>Valorl:</strong>
      <p><%= servico.valor %></p>
    </div>
   
    <div class="col-md-6">
      <strong>Ações:</strong>
      <div class="d-flex mt-2">
     
        <%= link_to "Editar",  edit_servico_path(servico),  class: "btn btn-primary mr-3" %>
        
        <%= button_to "Deletar", servico, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger ml-3" %>
     
       </div>
    </div>
  </div>
</div>
