<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card text-center">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
            <div class="mb-4">
              <h1 class="h3 mb-3 font-weight-normal">Login</h1>
            </div>

            <div class="form-label-group">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %>
              <%= f.label :email %>
            </div>

            <div class="form-label-group">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
              <%= f.label :password %>
            </div>

            <div class="checkbox mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label", for: "remember_me" %>
            </div>

            <div class="text-center">
              <%= f.submit "Login", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
